{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": true,
        "target": "ES5",
        "module": "ES2020",
        "moduleResolution": "node16",
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "types": ["node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts", ".tsbuild", "node_modules"]
}
